<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OTPBox">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>

    </style>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorAccent">@color/secondary_blue</item>
        <item name="android:windowBackground">@color/background_secondary</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/background_card</item>
    </style>

    <!-- Text Styles -->
    <style name="TextTitleLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextTitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextBodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextBodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>



    <!-- Status Indicator Styles -->
    <style name="StatusIndicatorActive">
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:backgroundTint">@color/status_active</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="StatusIndicatorInactive">
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:backgroundTint">@color/status_inactive</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
    </style>



    <!-- Stats Card Styles -->
    <style name="StatsCardBlue" parent="CardStyle">
        <item name="cardBackgroundColor">@color/card_stats_blue</item>
    </style>

    <style name="StatsCardGreen" parent="CardStyle">
        <item name="cardBackgroundColor">@color/card_stats_green</item>
    </style>

    <style name="StatsCardOrange" parent="CardStyle">
        <item name="cardBackgroundColor">@color/card_stats_orange</item>
    </style>

    <style name="StatsCardRed" parent="CardStyle">
        <item name="cardBackgroundColor">@color/card_stats_red</item>
    </style>

</resources>
