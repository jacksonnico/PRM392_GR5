<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_pitch_icon" android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_person"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pitch_name" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fpt"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_location"
                   />

                <TextView
                    android:id="@+id/tv_pitch_address" android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành phố Hà Nội"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pitch_hours" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mở cửa: 18:30 - 22:30"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_qr_code" android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_qr_code"
            android:layout_gravity="center_vertical"
            app:tint="@android:color/black" />

    </LinearLayout>
</androidx.cardview.widget.CardView>