<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Ảnh sân -->
        <ImageView
            android:id="@+id/ivPitchImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:contentDescription="Pitch image"
            android:background="#eee"/>

        <!-- Tên sân -->
        <TextView
            android:id="@+id/tvPitchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sân bóng ABC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginTop="8dp"/>

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/tvPitchAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23 Trường Chinh, Hà Nội"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:layout_marginTop="2dp"/>

        <!-- Giá sân -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá: 500.000 đ"
            android:textSize="14sp"
            android:textColor="#34495e"
            android:layout_marginTop="4dp"/>

        <!-- Khung giờ -->
        <TextView
            android:id="@+id/tvTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08:00-10:00"
            android:textSize="14sp"
            android:textColor="#34495e"
            android:layout_marginTop="2dp"/>

        <!-- Ngày đặt -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30/06/2025"
            android:textSize="14sp"
            android:textColor="#34495e"
            android:layout_marginTop="6dp"/>

        <!-- Dịch vụ -->
        <TextView
            android:id="@+id/tvServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thuê bóng, Nước uống"
            android:textSize="14sp"
            android:textColor="#34495e"
            android:layout_marginTop="4dp"/>

        <!-- Trạng thái và nút Hủy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Chờ duyệt"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="4dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textSize="14sp"
                android:backgroundTint="#e74c3c"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
