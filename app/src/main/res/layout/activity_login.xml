<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- ✅ Khung bo mờ chứa logo và tab -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_blur_card"
            android:elevation="12dp"
            android:clipToOutline="true">

            <!-- ✅ Ảnh mờ chỉ bên trong khung -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo1"
                android:alpha="0.6" />

            <!-- ✅ Nội dung khung -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="24dp">

                <TextView
                    android:text="Chào mừng trở lại"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:src="@drawable/logo"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="16dp" />

                <!-- Tab login/register -->
                <LinearLayout
                    android:id="@+id/tabContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:background="@drawable/tab_container"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tabLogin"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/tab_selected"
                        android:gravity="center"
                        android:text="Đăng nhập"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tabRegister"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Đăng ký"
                        android:textStyle="bold"
                        android:textColor="#B3E5FC"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- ✅ FORM ĐĂNG NHẬP -->
        <LinearLayout
            android:id="@+id/formLogin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <EditText
                android:id="@+id/edtUsername"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:drawableStart="@android:drawable/ic_lock_idle_lock"
                    android:background="@drawable/edittext_bg"
                    android:paddingEnd="48dp"
                    android:padding="12dp" />

                <ImageView
                    android:id="@+id/btnTogglePwd"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle password visibility"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/chkSaveLogin"
                    android:textColor="#0D47A1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lưu đăng nhập" />

                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:text="Quên mật khẩu"
                    android:textColor="#0D47A1"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                android:text="Đăng nhập"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F50057"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ✅ FORM ĐĂNG KÝ (ẨN BAN ĐẦU) -->
        <LinearLayout
            android:id="@+id/formRegister"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/edtFullName"
                android:hint="Họ và Tên"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtPhoneReg"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Mật khẩu -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/edtPasswordReg"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:drawableStart="@android:drawable/ic_lock_idle_lock"
                    android:background="@drawable/edittext_bg"
                    android:paddingEnd="48dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/btnTogglePwdReg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle password visibility"
                    android:clickable="true"
                    android:focusable="true"/>
            </RelativeLayout>

            <!-- Xác nhận mật khẩu -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/edtPasswordConfirm"
                    android:hint="Xác nhận mật khẩu"
                    android:inputType="textPassword"
                    android:drawableStart="@android:drawable/ic_lock_idle_lock"
                    android:background="@drawable/edittext_bg"
                    android:paddingEnd="48dp"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/btnTogglePwdConfirm"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye_closed"
                    android:contentDescription="Toggle password visibility"
                    android:clickable="true"
                    android:focusable="true"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnRegister"
                android:text="Đăng ký"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F50057"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnRegisterOwner"
                android:text="Đăng ký với tư cách chủ sân"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EEEEEE"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
