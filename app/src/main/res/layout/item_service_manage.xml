<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_name" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Dịch Vụ"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_service_price" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Giá: 0 VNĐ"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_service" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/light_gray_icon" android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_delete_service" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:backgroundTint="@color/red" android:textColor="@android:color/white"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>